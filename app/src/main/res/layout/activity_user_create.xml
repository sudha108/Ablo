<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_create"
    android:layout_width="match_parent"
    android:padding="15dp"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.ablo.UserCreateActivity">

    <TextView
        android:text="Creation of User"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:textSize="32sp"
        android:textAlignment="center"
        android:id="@+id/tvusercreatetitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp" />


    <EditText
        android:id="@+id/etcmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etcusername"
        android:layout_marginTop="31dp"
        android:ems="10"
        android:hint="enter user's mail id"
        android:inputType="textEmailAddress"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent" />

    <EditText
        android:id="@+id/etcname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvusercreatetitle"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="enter user's full name"
        android:inputType="textPersonName"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="24dp"
        android:id="@+id/etcusername"
        android:hint="enter a username for user"
        android:layout_below="@+id/etcname"
        android:textColorHint="@color/colorAccent"
        android:maxLength="8"
        android:textColor="@color/colorAccent"
        android:layout_alignLeft="@+id/etcname"
        android:layout_alignStart="@+id/etcname" />

    <Button
        android:id="@+id/bsubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etcmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Submit"
        android:textColorHint="@color/colorAccent" />

    <Button
        android:id="@+id/bgoback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bsubmit"
        android:layout_alignStart="@+id/bsubmit"
        android:layout_below="@+id/bsubmit"
        android:layout_marginTop="18dp"
        android:text="Go Back" />



</RelativeLayout>
