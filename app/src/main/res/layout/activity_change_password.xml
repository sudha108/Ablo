<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="@drawable/background"
    tools:context="com.ablo.ChangePasswordActivity">

    <TextView
        android:id="@+id/tvChangePasswordtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:text="Change Password"
        android:textColor="@color/colorAccent"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <EditText
        android:id="@+id/etchangepassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvChangePasswordtitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="115dp"
        android:ems="10"
        android:textColorHint="@color/colorAccent"
        android:textColor="@color/colorAccent"
        android:hint="enter new password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/bchange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etchangepassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="71dp"
        android:text="Change" />

    <Button
        android:id="@+id/bgoback3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/bchange"
        android:layout_alignRight="@+id/bchange"
        android:layout_below="@+id/bchange"
        android:layout_marginTop="22dp"
        android:text="Go Back" />

</RelativeLayout>